<?xml version="1.0" encoding="utf-8"?>
<Patch>
    <!-- Add Fog comp to all humanlike pawns (ThingDef Human and any races inheriting it) -->
    <Operation Class="PatchOperationAdd">
        <xpath>Defs/ThingDef[defName="Human"]/comps</xpath>
        <value>
            <li Class="FogOfPawn.CompProperties_PawnFog" />
        </value>
    </Operation>
</Patch> 